# Frontend Environment Configuration
# Copy this file to .env and configure the values

# External Backend API Configuration
VITE_API_BASE_URL=http://localhost:8000

# Application Configuration
VITE_APP_NAME=MedTest Pro
VITE_APP_VERSION=1.0.0

# External Service URLs (if different from main API)
VITE_AUTH_API_URL=http://localhost:8000/api/auth
VITE_PAYMENT_API_URL=http://localhost:8000/api/payments
VITE_REPORTS_API_URL=http://localhost:8000/api/reports

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_MOCK_DATA=false
VITE_DEBUG_MODE=false

# External Payment Gateway (if different from backend)
# VITE_STRIPE_PUBLIC_KEY=pk_test_...
# VITE_RAZORPAY_KEY=rzp_test_...

# Analytics and Monitoring (optional)
# VITE_GOOGLE_ANALYTICS_ID=G-...
# VITE_SENTRY_DSN=https://...

# Development specific
# VITE_MOCK_BACKEND=false
# VITE_API_TIMEOUT=30000